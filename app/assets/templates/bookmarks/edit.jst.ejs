<h3><%= title %></h3>
<form id="edit_bookmark_form">
  <label for="bookmark_url">URL:</label>
  <input type="text" name="bookmark[url]" value="<%= bookmark.escape("url") %>" id="bookmark_url">
  <br>
  
  <label for="bookmark_title">Title:</label>
  <input type="text" name="bookmark[title]" value="<%= bookmark.escape("title") %>" id="bookmark_title">
  <br>
  
  <label for="bookmark_summary">Summary:</label>
  <input type="text" name="bookmark[summary]" value="<%= bookmark.escape("summary") %>" id="bookmark_summary">
  <br>
  
  <input type="submit" value="Save changes">
</form>